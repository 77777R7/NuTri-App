{
  "name": "Supplement",
  "type": "object",
  "properties": {
    "brand": { "type": "string", "description": "Brand name (e.g., Pure Encapsulations, Thorne, Life Extension)" },
    "product_name": { "type": "string", "description": "Product name" },
    "category": {
      "type": "string",
      "enum": ["vitamins", "minerals", "probiotics", "omega3", "herbs", "amino_acids", "other"],
      "description": "Supplement category"
    },
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "dosage": { "type": "string" },
          "unit": { "type": "string" },
          "analysis": { "type": "string", "description": "AI-generated analysis of this ingredient" }
        }
      },
      "description": "List of ingredients with dosages"
    },
    "image_url": { "type": "string", "description": "URL of the scanned label image" },
    "ai_summary": { "type": "string", "description": "AI-generated summary of the supplement" },
    "serving_size": { "type": "string", "description": "Serving size information" },
    "servings_per_container": { "type": "number", "description": "Number of servings in container" },
    "is_active": { "type": "boolean", "default": true, "description": "Whether user is currently taking this supplement" },
    "reminder_interval_weeks": { "type": "number", "default": 10, "description": "Weeks between effectiveness check reminders" },
    "last_reminder_date": { "type": "string", "format": "date", "description": "Last time user was reminded to check effectiveness" }
  },
  "required": ["brand", "product_name"]
}
